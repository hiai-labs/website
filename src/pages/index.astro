---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Steps from "~/components/widgets/Steps.astro";
import Content from "~/components/widgets/Content.astro";
import BlogLatestPosts from "~/components/widgets/BlogLatestPosts.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Stats from "~/components/widgets/Stats.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import DynamicSubtitle from "~/dynamics/DynamicSubtitle.astro"; // Import the dynamic subtitle function
import Testimonials from "~/components/widgets/Testimonials.astro";
import Brands from "~/components/widgets/Brands.astro";
import Button from "~/components/ui/Button.astro";
import Image from "~/components/common/Image.astro";
import Features3 from "~/components/widgets/Features3.astro";

const aptosFoundationLink = "https://aptosfoundation.org/";
const aptosImageLink = "~/assets/images/index_aptos.png";

const gcpWeb3Link = "https://cloud.google.com/startup/web3?hl=en";
const gcpImageLink = "~/assets/images/index_gcp.png";

const metadata = {
  title: "HiAI Labs",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    image={{
      src: "~/assets/images/hiai-hero.png",
      alt: "AstroWind Hero Image",
    }}
  >
    <Fragment slot="title"> HiAI </Fragment>

    <Fragment slot="subtitle">
      The Decentralized Platform where<br />Humans <DynamicSubtitle
      />&nbsp;AI<br />in an Open Economy.
    </Fragment>

    <!-- Inject the onLoad script -->
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->
  <Features2
    title="AI of the Humans, by the Humans, for the Humans."
    tagline="Our Vision"
    subtitle="Human intelligence is vital at every stage of AI developmentâ€”from data annotation and model training to model evaluation and AI safety. AI development should be shaped and guided by human intelligence to better understand and benefit humans. <br><br>The ability to contribute to AI development and reap its benefits, both technological and economic, should be accessible to everyone. We aim to build a transparent and fair AI landscape, where participation in AI development is open to all, and financial rewards are equitably distributed to everyone."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <Brands
    title="Supported by"
    subtitle=""
    icons={[]}
    images={[
      {
        src: aptosImageLink,
        alt: "Aptos",
      },
      {
        src: gcpImageLink,
        alt: "Google Cloud",
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: "primary",
        text: "Launch App",
        href: "https://data-engine.staging.hiailabs.com/",
        target: "_blank",
        icon: "tabler:rocket",
      },
    ]}
  >
    <Fragment slot="title"> Join Our Mission </Fragment>

    <Fragment slot="subtitle">
      to Fuel, Develop, Monetize and Harness AI in an Open Economy.
    </Fragment>
  </CallToAction>
</Layout>
